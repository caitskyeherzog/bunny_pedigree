<p id="notice"><%= notice %></p>

<h1 class="page-header">Bunnies</h1>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Color</th>
      <th>Dob</th>
      <th>Mother</th>
      <th>Father</th>
      <th>Number of Children</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bunnies.each do |bunny| %>
      <tr>
        <td><%= bunny.name %></td>
        <td><%= bunny.color %></td>
        <td><%= bunny.dob %></td>
        <td><%= bunny.mother&.name %></td>
        <td><%= bunny.father&.name %></td>
        <td><%= bunny.children.count %></td>
        <td><%= link_to 'Show', bunny %></td>
        <td><%= link_to 'Edit', edit_bunny_path(bunny) %></td>
        <td><%= link_to 'Destroy', bunny, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

